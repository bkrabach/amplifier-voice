# Home Assistant Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit .env files with real tokens!

# =============================================================================
# REQUIRED CONFIGURATION
# =============================================================================

# Your Home Assistant long-lived access token
# Generate at: http://your-ha-host:8123/profile/security -> Long-Lived Access Tokens
HA_ACCESS_TOKEN=your_long_lived_access_token_here

# =============================================================================
# CONNECTION SETTINGS
# =============================================================================

# Home Assistant host (IP address or hostname, without protocol)
HA_HOST=localhost

# Home Assistant port (default: 8123)
HA_PORT=8123

# Use HTTPS/WSS for connections (set to true if using SSL)
HA_USE_SSL=false

# =============================================================================
# SSL CONFIGURATION (only needed if HA_USE_SSL=true)
# =============================================================================

# Verify SSL certificates (set to false only for self-signed certs in development)
HA_SSL_VERIFY=true

# Path to custom CA certificate bundle (for self-signed certificates)
# HA_SSL_CERT_PATH=/path/to/ca-cert.pem

# =============================================================================
# TIMEOUT SETTINGS (in seconds)
# =============================================================================

# Connection timeout
HA_CONNECTION_TIMEOUT=10.0

# Request timeout for API calls
HA_REQUEST_TIMEOUT=30.0

# WebSocket heartbeat interval
HA_WEBSOCKET_HEARTBEAT=30.0

# =============================================================================
# RETRY SETTINGS
# =============================================================================

# Maximum number of retry attempts for failed requests
HA_MAX_RETRIES=3

# Delay between retries (in seconds)
HA_RETRY_DELAY=1.0
